<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="15dp"
            android:orientation="horizontal"
            android:background="@color/vk_share_top_blue_color"
            android:shadowDy="50" >
            <Button
                android:id="@+id/invite_frined_activity_back_button"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_menu_back"/>
            <TextView
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leaderboard_invite_text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/vk_white"
                android:paddingLeft="35dp"
                android:paddingTop="15dp"/>
        </LinearLayout>
        <ListView
            android:id="@+id/list_friends_dialog_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_row_selector" />
    </LinearLayout>



</RelativeLayout>